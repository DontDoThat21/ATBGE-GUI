                        <Label x:Name="mandatoryFieldsTwitter_Label2" FontSize="16" Content="Mandatory Fields:" Margin="110,148,111,0" HorizontalContentAlignment="Center" Height="29" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
                        <TextBox x:Name="tboxApiKey2" Height="23" Margin="338,189,153,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Grid.ColumnSpan="2" TextChanged="tboxApiKey_TextChanged"/>
                        <TextBox x:Name="tboxApiSecret2" Grid.ColumnSpan="2" Height="23" Margin="338,224,153,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" TextChanged="tboxApiSecret_TextChanged"/>
                        <TextBox x:Name="tboxAccessToken2" Grid.ColumnSpan="2" Height="23" Margin="338,260,153,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" TextChanged="tboxAccessToken_TextChanged"/>
                        <TextBox x:Name="tboxAccessTokenSecret2" Grid.ColumnSpan="2" Height="24" Margin="338,296,153,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" TextChanged="tboxAccessTokenSecret_TextChanged"/>
                        <Border BorderThickness="1" BorderBrush="Black" Margin="166,189,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="133" Height="166">
                            <Grid Height="131" Margin="-5,-5,-6,-5" VerticalAlignment="Top">
                                <Label x:Name="lblApiKey2" HorizontalContentAlignment="Center" Content="API Key:" Margin="0,0,0,105"/>
                                <Label x:Name="lblApiSecret2" HorizontalContentAlignment="Center" Content="API Secret:" Margin="0,35,0,70"/>
                                <Label x:Name="lblAccessToken2" HorizontalContentAlignment="Center" Content="Access Token:" Margin="0,71,0,34"/>
                                <Label x:Name="lblAccessTokenSecret2" HorizontalContentAlignment="Center" Content="Access Token Secret:" Margin="0,107,0,-4"/>
                            </Grid>
                        </Border>
                        <Image x:Name="imgStatus2" Source="twitter.png" Margin="0,0,437,23" HorizontalAlignment="Right" Width="19" Height="20" VerticalAlignment="Bottom" RenderTransformOrigin="0.526,1.65"/>
                        <Button x:Name="btnTestCredentials2" Content="Test?" Margin="0,0,476,23" HorizontalAlignment="Right" Width="53" Height="20" VerticalAlignment="Bottom" Click="btnTestCredentials_Click" RenderTransformOrigin="0.742,0.6"/>
                        <Rectangle Fill="#FF0C83DD" Margin="0,0,319,17" Stroke="Black" HorizontalAlignment="Right" Width="210" Height="26" VerticalAlignment="Bottom" MouseDown="Rectangle_MouseDown"/>
                        <Label x:Name="lblSaved2" Foreground="GhostWhite" Content="Unchanged." Margin="0,0,387,17" HorizontalAlignment="Right" Width="73" Height="26" VerticalAlignment="Bottom"/>
                        
                    </Grid>

                </StackPanel>

            </TabItem>         
            
            <TabItem Header="Instagram">

                <StackPanel CanVerticallyScroll="True">


                    <Grid>
                        <Rectangle Fill="#FFB6D9F3" Stroke="Black" Height="65" VerticalAlignment="Top"/>
