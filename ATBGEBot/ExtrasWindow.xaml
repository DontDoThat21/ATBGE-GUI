        <Label x:Name="contentToAdd_Header" FontSize="16" Content="Stuff to add:" Margin="110,0,111,237" HorizontalContentAlignment="Center" Height="29" VerticalAlignment="Bottom"/>
        <RichTextBox x:Name="richTextBox" Margin="110,0,111,59" Height="173" VerticalAlignment="Bottom">
            <FlowDocument>
                <Paragraph>
                    <Run Text="Configurable list of Reddit communities. Better code architecture. Minimal API. Move this to .NET Core. Better automated timers for proper automation."/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>

    </Grid>
</Window>
