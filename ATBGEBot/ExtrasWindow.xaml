<Window x:Class="ATBGEBot.ExtrasWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ATBGEBot"
        mc:Ignorable="d"
        Title="ExtrasWindow" Height="450" Width="800">
    <Grid Height="419" VerticalAlignment="Bottom">
        <Rectangle Fill="#FFB6D9F3" Stroke="Black" Margin="0,0,0,354" Height="65" VerticalAlignment="Bottom"/>
        <Label x:Name="mainHeader" Content="NOT REALLY SURE WHAT ELSE TO ADD TO THIS GOD TIER APP!" Margin="10,22,10,371" HorizontalContentAlignment="Center" Foreground="GhostWhite"/>
        <Rectangle Fill="Black" Margin="10,70,10,10" Stroke="Black"/>

        <Image x:Name="imageBotLeft" Source="twitter.png" Stretch="Fill" Margin="10,0,0,10" HorizontalAlignment="Left" Width="66" Height="77" VerticalAlignment="Bottom"/>
        <Image x:Name="imageTopLeft" Source="twitter.png" Stretch="Fill" Margin="10,70,0,0" Height="77" VerticalAlignment="Top" HorizontalAlignment="Left" Width="66"/>
        <Image x:Name="imageTopRight" Source="twitter.png" Stretch="Fill" Margin="0,70,10,0" Height="77" VerticalAlignment="Top" HorizontalAlignment="Right" Width="66"/>
        <Image x:Name="imageBotRight" Source="twitter.png" Stretch="Fill" Margin="0,0,10,10" HorizontalAlignment="Right" Width="66" Height="77" VerticalAlignment="Bottom"/>
        <Label x:Name="label" FontSize="16" Content="ALL HAIL OUR LORD AND SAVIOR, LE'GOD SYSTEM ADMIN Le'Prescottian!" Margin="110,87,111,301" Foreground="GhostWhite" HorizontalContentAlignment="Center"/>
